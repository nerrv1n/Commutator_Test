@model Commutator.Models.Switch

<h2>Удаление коммутатора</h2>

<p>Вы уверены, что хотите удалить этот коммутатор?</p>

<table class="table">
    <tr>
        <th>Модель</th>
        <td>@Model.Model</td>
    </tr>
    <tr>
        <th>IP-адрес</th>
        <td>@Model.IpAddress</td>
    </tr>
    <tr>
        <th>Серийный номер</th>
        <td>@Model.SerialNumber</td>
    </tr>
    <tr>
        <th>MAC - Адрес</th>
        <td>@Model.MacAddress</td>
    </tr>
    <tr>
        <th>Управляющий Vlan</th>
        <td>@Model.Vlan</td>
    </tr>
    <tr>
        <th>Инвентарный номер</th>
        <td>@Model.InventoryNumber</td>
    </tr>
    <tr>
        <th>Дата покупки</th>
        <td>@Model.PurchaseDate</td>
    </tr>
    <tr>
        <th>Дата установки</th>
        <td>@Model.InstallationDate</td>
    </tr>
    <tr>
        <th>Этаж</th>
        <td>@Model.Floor</td>
    </tr>
    <tr>
        <th>Комментарий</th>
        <td>@Model.Comment</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
